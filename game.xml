<?xml version="1.0" encoding="UTF-8"?>

<!-- Defines the ISO project -->
<iso_project image_name="DUSTTRUST.bin" cue_sheet="DUSTTRUST.cue" no_xa="0">
	<!-- Data track -->
	<track type="data">
		<!-- Identifiers -->
		<identifiers
			system        = "PLAYSTATION"
			application   = "PLAYSTATION"
			volume        = "DUSTTRUST"
			volume_set    = "DUSTTRUST"
			publisher     = "LUCKY"
			copyright     = "NICKOLAS"
		/>
