				<file name = "sansph1.tim" type = "data" source = "iso/chars/sansph1.tim"/>
			</dir>

			<dir name = "music">
				<file name = "getup.mus" type = "data" source = "iso/music/getup/getup.mus"/>
				<file name = "phase1.mus" type = "data" source = "iso/music/phase1/phase1.mus"/>
				<file name = "phase1b.mus" type = "data" source = "iso/music/phase1/phase1battle.mus"/>
				<file name = "test.mus" type = "data" source = "iso/music/test/test.mus"/>
			</dir>
			
			<dir name = "sounds">
				<file name = "switch.vag" type = "data" source = "iso/sounds/switch.vag"/>
				<file name = "select.vag" type = "data" source = "iso/sounds/select.vag"/>
			</dir>

			<!-- Dummy sectors -->
			<dummy sectors="1024"/>
		</directory_tree>
	</track>
</iso_project>
