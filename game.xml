		<!-- Data directory tree -->
		<directory_tree>
			<!-- System -->
			<file name = "system.cnf" type = "data" source = "iso/system.cnf"/>
			<file name = "SCUS_000.00" type = "data" source = "dust.ps-exe"/>
			
			<file name = "font.tim" type = "data" source = "iso/font.tim"/>
			
			<file name = "battle.arc" type = "data" source = "iso/battle/main.arc"/>
			<file name = "menu.arc" type = "data" source = "iso/menu/main.arc"/>
			
